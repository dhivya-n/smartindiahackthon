<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.welcome.floatingbutton.disposeActivity">

    <TextView
        android:id="@+id/barcode"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/postalred"
       />
    <TextView
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"
        android:text="Defect Type:"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="@color/postalred"/>
    <Spinner
        android:id="@+id/defecttype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="80dp"
        android:entries="@array/defecttype_arrays"
        android:prompt="@string/defecttype_prompt"
        />
    <TextView
        android:textStyle="bold"
        android:text="Defect Description:"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="140dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/postalred"/>
    <EditText
        android:id="@+id/defectdesc"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="125dp"/>

    <TextView
        android:textStyle="bold"
        android:text="Priority:"
        android:textColor="@color/postalred"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="200dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />
    <Spinner
        android:id="@+id/priority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="200dp"
        android:entries="@array/priority_arrays"
        android:prompt="@string/priority_prompt" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ok"
        android:layout_below="@+id/priority"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="110dp"
        android:backgroundTint="@color/postalred"
        android:textColor="@color/postal_yellow"
        android:text="OK"/>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.welcome.floatingbutton.removalActivity">
    <ImageView
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/post_logo"/>
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="35dp"
        android:textStyle="bold"
        android:text="BHIM DASHBOARD"
        android:textColor="#b02925"
        android:textSize="30dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Model"
        android:textSize="20dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="50dp"
        android:textStyle="bold"
        android:textColor="@color/postalred"/>
    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="200dp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Manufacturer"
        android:textSize="20dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="50dp"
        android:textStyle="bold"
        android:textColor="@color/postalred"/>
    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="200dp"
        android:textColor="@color/black"/>
    <TextView

        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Cost"
        android:textSize="20dp"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="50dp"
        android:textStyle="bold"
        android:textColor="@color/postalred"/>
    <TextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="200dp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Date of Request"
        android:textSize="20dp"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="50dp"
        android:textStyle="bold"
        android:textColor="@color/postalred"
        android:id="@+id/textView3" />
    <TextView
        android:id="@+id/t4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="200dp"
        android:textColor="@color/black"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dispose Request"
        android:id="@+id/dispose"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="120dp"
        android:textColor="@color/postal_yellow"
        android:background="@color/postalred"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reason"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="50dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/postalred"/>
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/reason"
        android:textSize="20dp"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="200dp"/>

</RelativeLayout>
